{{template "header"}}
<body data-spy="scroll" data-target=".navMenuCollapse">

<div id="page-register">

   {{template "menu_common"}}

	<!-- LOGIN BLOCK-->
    <section id="page-register" class="intro-block bg-color1 cover-bg" style="background-image:url(/images/bg13.jpg)">
			<div class="container">
				<div class="row">
					<div class="col-md-6 dark-bg">
						<div class="slogan">
							<h1>The Start<br><b>For Your App</b></h1>
						</div>
						<ul class="item-list-left item-list-small item-list">
							<li>
								<i class="num-icon">1</i>
								<p>Conveniently simplify inexpensive alignments with long-term high-impact scenarios.</p>
							</li>
							<li>
								<i class="num-icon">2</i>
								<p>Conveniently simplify inexpensive alignments with long-term high-impact scenarios.</p>
							</li>
							<li>
								<i class="num-icon">3</i>
								<p>Conveniently simplify inexpensive alignments with long-term high-impact scenarios.</p>
							</li>
						</ul>
					</div>
					<div class="col-md-5 col-md-offset-1">
						<div class="form-container">
							<h3 class="title">Log in to your account</h3>
							<form method="POST" action="/user/login" role="form" id="contact_form" novalidate="novalidate">
								<p class="text-center"><b><i><font color="red">{{.Message}}</font></i></b></p>
								<div class="form-group">
									<input type="text" class="form-control" id="username" placeholder="User Name" value="{{.Username}}" name="username">
				
								</div>
								<div class="form-group">
									<input type="password" class="form-control" id="password" placeholder="Password" name="password">
								</div>
								<button type="submit" id="loginSubmit" data-loading-text="•••" class="btn btn-lg btn-block btn-primary">Login</button>
								<a  id="registerSubmit"  href="/user/register" class="btn btn-lg btn-block btn-link">Not account ?	Register</a>
								<a  id="forgetSubmit"  href="/user/forgetpassword" class="btn btn-lg btn-block btn-link">Forget Password</a>
							</form>
						</div>
				
						<div class="form-container">
							<ul class="list-inline text-center social-login">
								<li><i class="icon-social-twitter icon"></i></li>
								<li><i class="icon-googleplus icon"></i></li>
								<li><i class="icon-social-facebook icon"></i></li>
							</ul>
							
						</div>
					</div>
				</div>
			</div>
		</section>
   {{template "footer"}}

</div>
{{template "script".}}
</body>
</html>
