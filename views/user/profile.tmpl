            <strong>Messages: !</strong> {{.Message}}
        </div>
        {{end}}
        <form method="POST" action="/user/profile">
            <table>
                <col width="40%">
                <col width="20%">
                <tr>
                    <td>
                        Username:
                    </td>
                    <td>
                        &nbsp;
                    </td>
                    <td>
                        {{.Username}}
                    </td>
                </tr>
                <tr>
                    <td>
                        First Name:
                    </td>
                    <td>
                        &nbsp;
                    </td>
                    <td>
                        {{.FirstName}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Last Name:
                    </td>
